<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    BackgroundColor="#F8F8F8"
    xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="App.Views.JobDetailView"
    xmlns:Local="clr-namespace:App.ViewModels">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="highlightBlue">#13BAC3</Color>
            <Color x:Key="descriptionGray">#9eabba</Color>
            <x:Int32 x:Key="descriptionTextSize">18</x:Int32>

            <Style x:Key="subtitle" TargetType="Label">
                <Setter Property="TextColor" Value="black"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="Margin" Value="0, 20, 0, 0"/>
            </Style>

            <Style x:Key="line" TargetType="BoxView">
                <Setter Property="BackgroundColor" Value="{StaticResource highlightBlue}"/>
                <Setter Property="HeightRequest" Value="5"/>
                <Setter Property="WidthRequest" Value="68"/>
                <Setter Property="HorizontalOptions" Value="StartAndExpand"/>
                <Setter Property="Margin" Value="0, 4"/>
            </Style>

            <Style x:Key="description" TargetType="Label">
                <Setter Property="FontSize" Value="{StaticResource descriptionTextSize}"/>
                <Setter Property="TextColor" Value="{StaticResource descriptionGray}"/>
                <Setter Property="Margin" Value="0, 10, 0, 20"/>
            </Style>

            <Style x:Key="share" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="{StaticResource highlightBlue}"/>
                <Setter Property="CornerRadius" Value="42"/>
                <Setter Property="HeightRequest" Value="47"/>
                <Setter Property="WidthRequest" Value="47"/>
                <Setter Property="HasShadow" Value="False"/>
                <Setter Property="Margin" Value="0, 0, 20, 0"/>
            </Style>

            <Style x:Key="shareLbl" TargetType="Label">
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="FontFamily" Value="{StaticResource FontAwesomeBrands}"/>
                <Setter Property="FontSize" Value="47"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="VerticalOptions" Value="Center"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.BindingContext>
        <Local:JobDetailViewModel/>
    </ContentPage.BindingContext>

 <ScrollView>
    <StackLayout >
       <StackLayout Orientation="Horizontal"
                         Padding="15,12">
           <StackLayout.Margin>
               <OnPlatform
                   x:TypeArguments="Thickness"
                   iOS="10, 23, 20, 10"
                   Android="10, 20, 20, 10"/>
           </StackLayout.Margin>
                <Label Text="&#xf053;" FontFamily="{StaticResource FontAwesomeSolid}"
                       FontSize="30"
                       VerticalOptions="Center" HorizontalOptions="StartAndExpand" 
                       TextColor="Black"/>
                <Label Text="DETAILS"
                       FontSize="20"
                       VerticalOptions="Center" HorizontalOptions="CenterAndExpand"
                       Margin="0"
                       TextColor="Black"/>
                <Label FontFamily="{StaticResource FontAwesomeSolid}" Text="&#xf004;"
                       FontSize="35"  TextColor="{StaticResource highlightBlue}"
                       HorizontalOptions="EndAndExpand" VerticalOptions="Center"/>
     </StackLayout>
        <StackLayout Padding="20, 15" >
           <Label Text="{Binding JobsList.Title}" FontSize="27"
                  FontAttributes="Bold"
                  TextColor="black"/>
            <StackLayout Orientation="Horizontal" 
                         Spacing="2">
                <Frame CornerRadius="2" BackgroundColor="{StaticResource highlightBlue}"
                       IsVisible="{Binding JobsList.IsRemote}"
                        Padding="4,2"
                        Margin="0,0,5,0" HasShadow="False"
                        HorizontalOptions="Start">
                    <Label Text="Remoto" FontAttributes="Bold"
                           TextColor="White" 
                           FontSize="12"/>
                </Frame>
                <Label Text="{Binding JobsList.CompanyName}" 
                    FontSize="16"
                    TextColor="Black"
                    FontAttributes="Bold"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal" Margin="0, 5, 3, 0">
                <Label
                    TextColor="{StaticResource descriptionGray}"
                    Text="&#xf3c5;"
                    FontFamily="{StaticResource FontAwesomeSolid}"
                    VerticalOptions="Center"
                    />
                <Label TextColor="{StaticResource descriptionGray}"
                       Text="{Binding JobsList.Location}" VerticalOptions="Center"/>
                <Frame  CornerRadius="4" BackgroundColor="#8075ff"
                        Padding="5,3"
                        HorizontalOptions="EndAndExpand"
                        HasShadow="False"
                        >
                    <Label Text="{Binding JobsList.JobType}" HorizontalOptions="End" TextColor="White"/>
                </Frame>
            </StackLayout>
            
        </StackLayout>
         
       <StackLayout BackgroundColor="white" Padding="20" Margin="0,0,0,-30">
           <Label Text="Detalles del puesto" Style="{StaticResource subtitle}"/>
           <BoxView Style="{StaticResource line}"/>
           <Label Text="{Binding JobsList.DescriptionHtml}" Style="{StaticResource description}" TextType="Html" />
           
           <Label Text="Como aplicar" Style="{StaticResource subtitle}"/>
           <BoxView Style="{StaticResource line}"/>
           <Label Text="{Binding JobsList.HowToApplyHtml}" Style="{StaticResource description}" TextType="Html" />

           <Label Text="Sobre la compañía" Style="{StaticResource subtitle}"/>
           <BoxView Style="{StaticResource line}"/>
           <Frame
                BorderColor="White"
                BackgroundColor="#363d61"
                CornerRadius="80"
                HeightRequest="120"
                WidthRequest="120"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                HasShadow="False"
                Margin="0, 10"
                >
               <Image Source="{Binding Path=JobsList.CompanyLogoUrl}" Aspect="AspectFill"/>
           </Frame>
           <Label FontSize="22" FontAttributes="Bold"
                  Text="{Binding Path=JobsList.CompanyName}" TextColor="Black"/>
           <Label Text="We build custom applications to help you organize and automate those tasks that are repetitive, predictable, and manual.

Whether you’re looking for automation or talent to expand your team, Helpnet provides custom solutions to help you transform."
                  Style="{StaticResource description}"/>

           <Button BackgroundColor="{StaticResource highlightBlue}"
                   Text="Mas sobre la compañía" TextColor="White"
                   FontAttributes="Bold" FontSize="22" Padding="28, 20"/>


           <Label Text="Más empleos de esta compañía" Style="{StaticResource subtitle}"/>
           <BoxView Style="{StaticResource line}"/>
           <Frame CornerRadius="4" BackgroundColor="{StaticResource CardBackGroundColor}" Margin="0,15,0,0"
                    Padding="10,10" HasShadow="False">
                <Grid HorizontalOptions="FillAndExpand"
                      BackgroundColor="{StaticResource CardBackGroundColor}">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height=" Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0"
                        Grid.Column="0"
                        Text="Back End Developer"
                        FontAttributes="Bold"
                        FontSize="Medium"
                            HorizontalOptions="Start"
                            TextColor="{StaticResource TextLabelColor}"
                            Padding="0"
                            Margin="0" LineBreakMode="NoWrap"/>
                    <StackLayout Grid.Row="1"
                                Grid.Column="0"
                                Orientation="Horizontal"
                                    Padding="0"
                                    Spacing="0">
                        <Frame CornerRadius="2" BackgroundColor="{StaticResource BGRemoteLabel}"
                                Padding="4,2"
                                Margin="0,0,5,0"
                                HasShadow="False"
                                HorizontalOptions="Start">
                            <Label Text="Remoto" 
                                    TextColor="White"
                                    FontSize="Micro"
                                    Padding="0"
                                Margin="0"/>
                        </Frame>

                        <Label Text="Megsoft" 
                                FontSize="Small"
                                TextColor="{StaticResource TextLabelColor}"
                                Padding="0"
                                Margin="0"/>
                    </StackLayout>


                    <Grid Grid.Row="2"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2" HorizontalOptions="FillAndExpand" RowSpacing="0" Padding="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" 
                                    Text="&#xf3c5;"
                                    FontFamily="{StaticResource FontAwesomeSolid}"
                                    Margin="0"
                                    Padding="0" VerticalOptions="Center"
                                    TextColor="{StaticResource InactiveColor}"/>
                        <Label Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"
                                    Text="Santo Domingo, RD"
                                FontSize="Small"
                                    Margin="0"
                                    Padding="0" VerticalOptions="Center"
                                LineBreakMode="NoWrap" TextColor="{StaticResource LocationLabelColor}"/>

                                        
                    </Grid>
                                    
                        <Frame Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" CornerRadius="2" BackgroundColor="{StaticResource TWebDeveloper}"
                                Padding="4,2"
                                HorizontalOptions="End"
                                HasShadow="False"
                                Margin="0"
                                >
                            <Label Text="Desarrollador Web" FontSize="Micro" HorizontalOptions="End"  VerticalOptions="End" Margin="0" TextColor="White"/>
                        </Frame>
                </Grid>
            </Frame>
           <Frame CornerRadius="4" BackgroundColor="{StaticResource CardBackGroundColor}" Margin="0,10,0,0"
                    Padding="10,10" HasShadow="False">
                <Grid HorizontalOptions="FillAndExpand"
                      BackgroundColor="{StaticResource CardBackGroundColor}">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height=" Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0"
                        Grid.Column="0"
                        Text="Back End Developer"
                        FontAttributes="Bold"
                        FontSize="Medium"
                            HorizontalOptions="Start"
                            TextColor="{StaticResource TextLabelColor}"
                            Padding="0"
                            Margin="0" LineBreakMode="NoWrap"/>

                    <StackLayout Grid.Row="1"
                                Grid.Column="0"
                                Orientation="Horizontal"
                                    Padding="0"
                                    Spacing="0">
                        <Frame CornerRadius="2" BackgroundColor="{StaticResource BGRemoteLabel}"
                                Padding="4,2"
                                Margin="0,0,5,0"
                                HasShadow="False"
                                HorizontalOptions="Start">
                            <Label Text="Remoto" 
                                    TextColor="White"
                                    FontSize="Micro"
                                    Padding="0"
                                Margin="0"/>
                        </Frame>

                        <Label Text="Megsoft" 
                                FontSize="Small"
                                TextColor="{StaticResource TextLabelColor}"
                                Padding="0"
                                Margin="0"/>
                    </StackLayout>


                    <Grid Grid.Row="2"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2" HorizontalOptions="FillAndExpand" RowSpacing="0" Padding="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" 
                                    Text="&#xf3c5;"
                                    FontFamily="{StaticResource FontAwesomeSolid}"
                                    Margin="0"
                                    Padding="0" VerticalOptions="Center"
                                    TextColor="{StaticResource InactiveColor}"/>
                        <Label Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"
                                    Text="Santo Domingo, RD"
                                FontSize="Small"
                                    Margin="0"
                                    Padding="0" VerticalOptions="Center"
                                LineBreakMode="NoWrap" TextColor="{StaticResource LocationLabelColor}"/>

                                        
                    </Grid>
                                    
                        <Frame Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" CornerRadius="2" BackgroundColor="{StaticResource TWebDeveloper}"
                                Padding="4,2"
                                HorizontalOptions="End"
                                HasShadow="False"
                                Margin="0"
                                >
                            <Label Text="Desarrollador Web" FontSize="Micro" HorizontalOptions="End"  VerticalOptions="End" Margin="0" TextColor="White"/>
                        </Frame>
                </Grid>
            </Frame>

           <Label Text="Compartir" Style="{StaticResource subtitle}"/>
           <BoxView Style="{StaticResource line}"/>
           <StackLayout Orientation="Horizontal" Margin="0, 20" HorizontalOptions="CenterAndExpand">
               <Frame Style="{StaticResource share}">
                   <Label Text="&#xf39e;"
                          Style="{StaticResource shareLbl}"/>
               </Frame>
               <Frame Style="{StaticResource share}">
                   <Label Text="&#xf099;"
                          Style="{StaticResource shareLbl}"/>
               </Frame>
               <Frame Style="{StaticResource share}">
                   <Label Text="&#xf0e1;"
                          Style="{StaticResource shareLbl}"/>
               </Frame>
           </StackLayout>
       </StackLayout>
   </StackLayout>
 </ScrollView>
    
</ContentPage>