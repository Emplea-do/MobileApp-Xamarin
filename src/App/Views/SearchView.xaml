<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="App.Views.SearchView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:androidWidget="clr-namespace:Android.Widget;assembly=Mono.Android;targetPlatform=Android"
    xmlns:ios="clr-namespace:UIKit;assembly=Xamarin.iOS;targetPlatform=iOS"
    x:Name="Search"
    Title="Search"
    Shell.NavBarIsVisible="False">
    <ContentPage.Content>
     <Grid>
     <Grid.RowDefinitions>
         <RowDefinition Height="Auto" /> 
         <RowDefinition Height="Auto" />
         <RowDefinition Height="Auto" />
         <RowDefinition Height="100" /> 
         <RowDefinition Height="100" />
         <RowDefinition Height="100" />
     </Grid.RowDefinitions>

     <Grid.ColumnDefinitions>
         <ColumnDefinition Width="*" />
         <ColumnDefinition  Width="*" />
     </Grid.ColumnDefinitions>

     
            <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                Margin="20,100,20,0"
                FontAttributes="Bold"
                FontSize="Large"
                Text="Hola, ¿Qué tipo de trabajo estamos buscando?"
                TextColor="{StaticResource TextLabelColor}" />

            <Entry Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                Margin="20,20,20,0"
                Placeholder=" Keywords"
                Text="{Binding EnKeywords}" />
            <Label Grid.Row="1"  Grid.Column="0" Grid.ColumnSpan="2"
                   Margin="20,0,20,0"
                   IsVisible="{Binding IsVisible}" Text="{Binding Message}" />

            <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                Margin="20,20,10,0"
                FontAttributes="Bold"
                FontSize="Default"
                Text="Buscar por Categoría"
                TextColor="{StaticResource TextLabelColor}" />
            <CarouselView Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                Margin="20,0,20,0"
                HorizontalOptions="Start"
                HorizontalScrollBarVisibility="Never"
                ItemsSource="{Binding JobCards}"
                >
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Frame HasShadow="False" HorizontalOptions="CenterAndExpand">
                                <Frame.GestureRecognizers>
                                       <TapGestureRecognizer Command="{Binding Source={x:Reference Name=Search}, Path=BindingContext.CategorySearch}" CommandParameter="{Binding NameCard}" NumberOfTapsRequired="1"/>
                                </Frame.GestureRecognizers>
                                <StackLayout>
                                    <Image Source="{Binding Image}" />
                                    <Label
                                        FontSize="Micro"
                                        HorizontalTextAlignment="Center"
                                        Text="{Binding NameCard}" />
                                </StackLayout>
                            </Frame>
                        </StackLayout>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>

           
                <Label Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                    Margin="20,0,0,0"
                    FontSize="Large"
                    HorizontalOptions="StartAndExpand"
                    Text="Buscar solo empleos remotos"
                    TextColor="{StaticResource TextLabelColor}"
                    VerticalOptions="Center" />
                <Switch Grid.Row="4" Grid.Column="1"
                    Margin="0,0,20,0"
                    HorizontalOptions="End"
                    IsToggled="{Binding IsRemote}"
                    OnColor="#13bac3"
                    ThumbColor="{StaticResource ThumbColor}"
                    VerticalOptions="Center" />

            <Button Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2"
                Margin="20,0,20,0"
                BackgroundColor="{StaticResource BackgroundColorButtonSearch}"
                Command="{Binding BtnSearch}"
                FontAttributes="Bold"
                FontSize="Large"
                HeightRequest="60"
                HorizontalOptions="CenterAndExpand"
                IsEnabled="{Binding IsEnable}"
                Text="Buscar"
                TextColor="{StaticResource TextColoButtonSearch}"
                VerticalOptions="CenterAndExpand"
                WidthRequest="400" />
       </Grid>
    </ContentPage.Content>
</ContentPage>